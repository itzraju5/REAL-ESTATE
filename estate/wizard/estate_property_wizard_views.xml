<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_estate_property_add_offer" model="ir.actions.act_window">
        <field name="name">Add Offer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.property.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>




    <record id="view_estate_property_wizard_form" model="ir.ui.view">
        <field name="name">estate.property.wizard.view.form</field>
        <field name="model">estate.property.wizard</field>
        <field name="arch" type="xml">
            <form string="Raju">
                <group>
                    <field name="price"/>
                    <field name="buyer"/>
                    <field name="date_availability" />
                </group>

                <footer>
                    <button string="Make an Offer" type="object" name="action_make_offer" class="btn-primary"/>
                    <button string="Cancel" type="object" special="cancel" class="btn-secondary"/>
                </footer>

            </form>
        </field>
    </record>


</odoo>
